{
  "name": "strong-config-ts",
  "version": "0.0.2",
  "description": "SOPS-based secret management tool for NodeJS",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "repository": "git@github.com:strong-config/node.git",
  "author": "mohoff <moritz.hoffmann@brickblock.io>",
  "license": "MIT",
  "scripts": {
    "health": "ts-node scripts/healthcheck.ts",
    "lint": "yarn lint:ts && yarn lint:json && yarn lint:yaml && yarn lint:markdown",
    "lint:ts": "eslint --ext [.ts] src scripts",
    "lint:ts:fix": "eslint --fix --ext [.ts] src scripts",
    "lint:json": "jsonlint-cli package.json src/**/*.json",
    "lint:markdown": "markdownlint **/*.md --ignore node_modules --ignore CHANGELOG.md --ignore .gitlab",
    "lint:yaml": "yamllint **/*.yaml **/*.yml --ignore=node_modules/**/*.yaml --ignore=node_modules/**/*.yml",
    "release": "standard-version --message \"chore(release): %s [ci-release]\"",
    "todo": "leasot '**/*.js' --ignore 'node_modules/**/*','build/**/*','.git/**/*' || true",
    "watch": "tsc --watch",
    "clean": "rimraf build/",
    "build": "tsc"
  },
  "devDependencies": {
    "@brickblock/eslint-config-base-ts": "^1.0.2",
    "@types/node": "^12.7.5",
    "@types/ora": "^3.2.0",
    "@types/shelljs": "^0.8.5",
    "@typescript-eslint/eslint-plugin": "^2.3.0",
    "@typescript-eslint/parser": "^2.3.0",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.5",
    "jsonlint-cli": "^1.0.1",
    "lint-staged": "^9.2.5",
    "markdownlint-cli": "^0.18.0",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "shelljs": "^0.8.3",
    "standard-version": "^7.0.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3",
    "yaml-lint": "^1.2.4"
  }
}
